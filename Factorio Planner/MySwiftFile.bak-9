                ForEach(outputs.sorted(by: { $0.key < $1.key }), id: \.key) { item, amount in
                    HStack(spacing: 2) {
                        IconOrMonogram(item: item, size: 12)
                        Text("\(amount, format: .number)")
                            .font(.caption)
                    }
                }
            }
        }
    }
}

